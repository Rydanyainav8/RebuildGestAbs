{% include "navbarProf.html.twig" %}

{% block title %}Absence Etudiant
{% endblock %}

{% block body %}
	<div class="login">
		<div class="lo cart">
			<h1 class="font bck ">Absence</h1>
			{{form_start(form)}}
			<div class="centrage">
				<div class="formcontainer2">
					<div class="blok">
						<p>
							<label for="absence_prof_motif">Motif de l'absence</label>
						</p>
						{{form_widget(form.motif, {'attr': {'class':'form-control'}})}}
					</div>
					<div class="blok">
						<p>
							<label for="absence_prof_email1">Email scolarit√©</label>
						</p>
						{{form_widget(form.email1, {'attr': {'class':'form-control'}})}}
					</div>
					<div class="btnForm">
						<button class="btn-formu" type="submit">Envoyer</button>
					</div>
				</div>
			</div>
			{{form_end(form)}}
		</div>
		{% for message in app.flashes('success') %}
			<div class="ic">
				<div class="success-msgico normal">
					<i class="far fa-check-circle"></i>
				</div>
				<h3 class="success-msgtxt normal">
					<p>{{ message }}</p>
				</h3>
			</div>
		{% endfor %}
	</div>
	{% block javascripts %}
		<script src="https://cdn.jsdelivr.net/npm/axentix@1.3.3/dist/js/axentix.min.js"></script>

		<script>
			Axentix.updateInputs()
		</script>
	{% endblock %}
{% endblock %}
