{% extends 'base.html.twig' %}

{% block title %}Page de connexion
{% endblock %}

{% block body %}
	<div class="Gflexa">
		<div class="flexEt">
			<img src="/assets/css/etudiantlog.jpg" alt="">
		</div>
	</div>
	<div class="container">
		<div class="login">
			<div class="lo2 cart">
				{% if error %}
					<h1 class="red">Se connecter</h1>
				{% else %}
					<h1 class="fontlog">Se connecter</h1>
				{% endif %}
				<form method="post">
					<div class="centrage">
						<div class="formcontainer3">

							<div class="tsipikalog"></div>
							<div class="flex">
								<div class="icontext">
									<label for="inputEmail">Email</label>
								</div>
								<div class="icontext">
									<i class="far fa-envelope muted"></i>
								</div>
							</div>
							<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
							<div class="flex">
								<div class="icontext">
									<label for="password-field">Mot de passe</label>
								</div>
								<div class="icontext">
									<i class="far fa-key muted"></i>
								</div>
							</div>
							<input type="password" name="password" id="password-field" class="form-control" autocomplete="current-password" required>

							<div class="password-icon">
								<span toggle="#password-field" class="fas fa-eye toggle-password"></span>
							</div>
							<input
							type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

							{#
																																																																																																																																																																																													        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
																																																																																																																																																																																													        See https://symfony.com/doc/current/security/remember_me.html
																																																																																																																																																																																													
																																																																																																																																																																																													        <div class="checkbox mb-3">
																																																																																																																																																																																													            <label>
																																																																																																																																																																																													                <input type="checkbox" name="_remember_me"> Remember me
																																																																																																																																																																																													            </label>
																																																																																																																																																																																													        </div>
																																																																																																																																																																																													    #}

							<div class="btn">
								<button class="btn-log" type="submit">
									Connexion
								</button>
							</div>

							{% if app.user %}
								<div class="warningtxt">
									Connexion de
									{{ app.user.email }}
									<a href="{{ path('app_logout') }}">
										<i class="far fa-sign-in-alt"></i>
									</a>
								</div>
							{% endif %}
							{% if error %}
								<div class="alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
							{% endif %}

						</div>
					</div>
				</form>

			</div>
		</div>
	</div>
	{% block javascripts %}
		<script src="/assets/js/scripts.js"></script>
	{% endblock %}
{% endblock %}
